---
pagination: false
permalink: "blog/{{ page.fileSlug }}/index.html"
---
{% extends "layouts/base.njk" %}
{% set title = title %}
{% set description = description %}
{% block content %}
<article class="py-16 px-4 max-w-3xl mx-auto">
  <p class="text-sm text-indigo-500 mb-2">{{ date | date("MMMM d, yyyy") }}</p>
  <h1 class="text-3xl font-extrabold text-indigo-700 mb-4">{{ title }}</h1>
  {% if thumbnail %}<img src="{{ thumbnail }}" alt="" class="rounded mb-6 w-full">{% endif %}
  <div class="prose max-w-none">
    {{ content | safe }}
  </div>
</article>
{% endblock %}
