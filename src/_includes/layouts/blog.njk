{% extends "layouts/blog.njk" %}

{% block content %}
<main class="container" style="max-width:900px; margin:2rem auto; padding:1rem;">
  <h1>Blog & Case Studies</h1>
  <p>Insights, updates, and case studies from our work.</p>

  <div class="blog-list">
    {% for post in collections.blog | reverse %}
      <article style="margin-bottom:2rem; border-bottom:1px solid #ddd; padding-bottom:1rem;">
        <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        <p><small>ðŸ“… {{ post.date | date("MMMM d, yyyy") }}</small></p>
        
        {% if post.data.thumbnail %}
          <img src="{{ post.data.thumbnail | url }}" alt="{{ post.data.title }}" style="max-width:250px; margin:0.5rem 0;" />
        {% endif %}

        <p>{{ post.data.excerpt }}</p>
        <p><a href="{{ post.url }}">Read More â†’</a></p>
      </article>
    {% endfor %}
  </div>
</main>
{% endblock %}
